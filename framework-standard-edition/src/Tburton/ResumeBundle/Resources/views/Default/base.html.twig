<!DOCTYPE html>
<html>
  <head>
    <title>{{ page_title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="description" content="Resume Portfolio Site">
    <meta name="author" content="Tom Burton">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
    <style>
      body
      { /* 60px to make the container go all the way to the bottom of the topbar */
        padding-top: 60px;
        padding-bottom: 40px;
      }
    </style>

    {# for page level css additions where necessary #}
    {% block stylesheets %}{% endblock %}

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="{{ asset('js/html5shiv.js') }}"></script>
    <![endif]-->

    <!-- Fav and touch icons -->
    <link rel="apple-touch-icon-precomposed" sizes="144x144"
          href="{{ asset('ico/apple-touch-icon-144-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="114x114"
          href="{{ asset('ico/apple-touch-icon-114-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="72x72"
          href="{{ asset('ico/apple-touch-icon-72-prec999omposed.png') }}">
    <link rel="apple-touch-icon-precomposed"
          href="{{ asset('ico/apple-touch-icon-57-precomposed.png') }}">
    <link rel="shortcut icon" href="{{ asset('ico/favicon.png') }}">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
  </head>

  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <button type="button" class="btn btn-navbar"
                  data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="/Resume">{{ fullName }}</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
              {# TODO: How can I easily set class="active" per page? #}
              {% if page_title == "Tom Burton's Portfolio" %}
                <li class="active" >
              {% else %}
                <li>
              {% endif %}
                <a href="/Resume">Home</a>
              </li>
              {% if page_title == "About" %}
                <li class="active" >
              {% else %}
                <li>
              {% endif %}
                <a href="/Resume/About">About</a>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Resume<b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li class="nav-header">Formats</li>
                  <li class="divider"></li>
                  <li><a href="#">Html</a></li>
                  <li><a href="#">Word Document</a></li>
                  <li><a href="#">Text</a></li>
                  <li><a href="#">PDF</a></li>
                </ul>
              </li>
              {% if page_title == "About" %}
                <li class="active" >
              {% else %}
                <li>
              {% endif %}
                <a href="/Resume/Contact">Contact</a>
              </li>
            </ul>
            <form class="navbar-form pull-right">
              <input class="span2" type="text" placeholder="Email">
              <input class="span2" type="password" placeholder="Password">
              <button type="submit" class="btn">Sign in</button>
            </form>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container">
      {% block body %}{% endblock %}
      <hr>
      <footer>
        <p>&copy; {{ siteName }} 2013</p>
      </footer>
    </div> <!-- /container -->

    <!-- the javascript ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="{{ asset('js/jquery.js') }}"></script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>

    {# user level JS customizations #}
    {% block javascripts %}{% endblock %}
  </body>
</html>
